<mapper namespace="com.oasis.hworld.deliveryaddress.mapper.DeliveryAddressMapper">
    <!-- 회원 ID로 배송지 목록 조회 -->
    <select id="selectDeliveryAddressByMemberId">
        SELECT
            delivery_address_id,
            name,
            phone,
            email,
            location,
            created_at
        FROM
            delivery_address
        WHERE
            member_id = #{memberId}
    </select>

    <!-- 배송지 ID로 배송지 조회 -->
    <select id="selectDeliveryAddressByDeliveryAddressId">
        SELECT
            delivery_address_id,
            member_id,
            name,
            phone,
            email,
            location,
            created_at
        FROM
            delivery_address
        WHERE
            delivery_address_id = #{deliveryAddressId}
    </select>
</mapper>